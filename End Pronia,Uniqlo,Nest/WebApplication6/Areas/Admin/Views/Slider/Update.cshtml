@using WebApplication6.Models
@model Slider
<div class="container">
    <h3 style="text-align:center;">Update</h3>
</div>

<form method="post" >
    <div class="form-group">
        <label asp-for="Name">Product Name:</label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Write product name please..">
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Discount">Product Discount:</label>
        <input asp-for="Discount" type="text" class="form-control" placeholder="How many do discount for product..">
        <span asp-validation-for="Discount"></span>

    </div>
    <div class="form-group">
        <label asp-for="Description">Description about product</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description"></span>

    </div>
    <div class="form-group">
        <label asp-for="ImgUrl">Choose photo for product</label>
        <input type="file" class="form-control-file" asp-for="ImgUrl">

    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success green" >Update</button>

    </div>
</form>
